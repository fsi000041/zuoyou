<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bigzone.zuoyou.stocktaking.activity.AtocktakingRecordDetailActivity">

    <include layout="@layout/top_colomn"/>
    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:checkedButton="@+id/rb_all"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_need"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="待审批"
            android:textColor="@drawable/sales_status_color" />

        <RadioButton
            android:id="@+id/rb_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="已审批"
            android:textColor="@drawable/sales_status_color" />

        <RadioButton
            android:id="@+id/rb_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="驳回与撤销"
            android:textColor="@drawable/sales_status_color" />

    </RadioGroup>

    <ExpandableListView
        android:id="@+id/elv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ExpandableListView>
</LinearLayout>
