<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_colomn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25.5dp"
        android:background="@color/colorGrayBg">

        <TextView
            style="@style/MyTextGrayThress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:text="关键词 (可输入品牌,系列,商品的编码或名称)" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_kuanshi"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/MyTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:text="关键词"
            android:id="@+id/textView3" />

        <EditText
            android:id="@+id/ed_enter"
            style="@style/MyTextGray"
            android:imeOptions="actionSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:background="@null"
            android:hint="请输入"
            android:layout_alignTop="@+id/textView3">
        </EditText>



    </RelativeLayout>
</LinearLayout>