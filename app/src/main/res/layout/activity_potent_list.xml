<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_colomn" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:checkedButton="@+id/rb_all"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:textColor="@drawable/sales_status_color" />

        <RadioButton
            android:id="@+id/rb_recent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="最近"
            android:textColor="@drawable/sales_status_color" />

        <RadioButton
            android:id="@+id/rb_warm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/redio_btn_seleter"
            android:button="@null"
            android:gravity="center"
            android:text="已设提醒"
            android:textColor="@drawable/sales_status_color" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine" />

    <EditText
        style="@style/MyTextGrayFour"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@color/colorGrayLine"
        android:gravity="center"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"></ListView>
</LinearLayout>