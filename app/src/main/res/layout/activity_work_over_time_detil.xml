<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/top_colomn"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58.8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/info" />

            <TextView
                style="@style/MyTextGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="9dp"
                android:text="加班状态：已审批" />

            <TextView
                style="@style/MyTextGrayFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="31.8dp"
                android:text="2017-10-21 21:12"

                 />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="58.8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/info" />

            <TextView
                android:id="@+id/tv_apply_for"
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="9dp"
                android:text="申请人：某某" />

            <TextView
                android:id="@+id/tv_apply_for_time"
                style="@style/MyTextGrayFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="31.8dp"
                android:text="申请时间：2017-10-21 21:12"
                 />

            <TextView
                android:id="@+id/tv_department"
                style="@style/MyTextGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="199dp"
                android:layout_marginTop="9dp"
                android:text="部门: 财务部" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="开始时间  " />

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115dp"
                android:text="2010年10月10日 9:00"
                 />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLine" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="结束时间"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp" />

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115dp"
                android:text="2010年10月10日 9:00"
                android:id="@+id/textView" />




            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLine" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="加班总量" />

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115dp"
                android:text="1天"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLine" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="加班事由" />

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115dp"
                android:text="回老家吃鸡"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLine" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="审批流程" />

            <TextView
                style="@style/MyTextGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115dp"
                android:text="请选择"
               />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/row_right" />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLine" />

        </RelativeLayout>


        <TextView
            style="@style/MyTextGrayThress"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="附件" />

        <RelativeLayout
            android:id="@+id/rl_add_attachment"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/colorWhite">

            <TextView
                style="@style/MyTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20.5dp"
                android:text="附件.JPG" />


            <com.bigzone.zuoyou.Attendance.Activity.View.XCRoundImageView
                android:id="@+id/xcr_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
