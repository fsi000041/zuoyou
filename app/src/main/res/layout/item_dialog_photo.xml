<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        style="@style/MyTextGrayThress"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="组合商品（组合商品可展开后单独记录单品数量）"/>
    <View
        android:background="@color/black_444444"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/tv_goods"
        android:layout_width="match_parent"
        android:layout_height="60dp"></TextView>


    <View
        android:background="@color/black_444444"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_huowei"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/MyTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:text="货位" />

        <TextView
            style="@style/MyTextGray"
            android:id="@+id/tv_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293dp"
            android:layout_marginTop="11dp"
            android:text="请选择" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_cancal"
            android:background="@color/colorGrayBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/textView2"
            style="@style/MyTextBlackFour"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorMain">
        <TextView
            android:layout_marginTop="12dp"
            style="@style/MyText14spWhite"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="52dp"
            android:text="加入盘点记录" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>