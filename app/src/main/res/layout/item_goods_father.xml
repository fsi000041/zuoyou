<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_zhankai"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_group_name"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:text="小猫"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:src="@drawable/main_attend"/>

    
        <TextView
            style="@style/MyTextBlackFour"
            android:id="@+id/tv_name"
            android:layout_width="211dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="布套沙发 转A (正)"/>

        <TextView
            style="@style/MyTextBlackFour"
            android:id="@+id/tv_bianhao"
            android:layout_width="211dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="33dp"
            android:text="编号：25437477318637618"/>

        <TextView
            style="@style/MyTextBlackFour"
            android:id="@+id/tv_xinghao"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="53dp"
            android:text="型号：G5000Q"/>
        <Button
            android:id="@+id/bt_jian"
            android:layout_marginRight="89dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_gray"
            android:focusable="false"/>
        
        <TextView
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="14dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp"/>
            <Button
                android:id="@+id/bt_jia"
                android:layout_marginRight="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_blue"
                android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开"
            android:layout_marginLeft="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/blueNavy"
            />

    </RelativeLayout>
