<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_combine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayBg"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="AQ2871款式"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:text="组合此款式商品"
            android:textColor="@color/colorSecond"
            android:textSize="13dp"
            />

        <ImageView

            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:rotation="180"
            android:src="@drawable/left_blue"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/select_cart"
            android:button="@null"
            android:checked="true"
            android:focusable="false"/>

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/download"/>

        <TextView
            android:id="@+id/tv_product_info"
            style="@style/MyTextBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:text="AP-666（1+1+3）布套沙发 卡其色亚麻布套"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="64dp"
            android:text="￥680.00"
            android:textColor="@color/colorMain"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="62dp">

            <TextView
                android:id="@+id/tv_minu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/minus_gray"/>

            <TextView
                android:id="@+id/tv_number_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="123"/>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/add_blue"
                />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>