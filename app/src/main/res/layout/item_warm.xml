<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_status"
        style="@style/MyTextWhite"
        android:layout_width="44dp"
        android:layout_height="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sales_tv_bg_blue"
        android:gravity="center"
        android:text="代办"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/MyTextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="请假单 caj-100860001 待您审批" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/MyTextGrayFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="36dp"
        android:text="某某人因为某某事要请假  请假时间:2017-08-01 08:00 至 2017-08-02 08:00" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorGrayLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_read"
            style="@style/MyTextBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="未读"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/MyTextGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tv_read"
            android:text="2017.08.18由系统发出"
            android:textSize="10sp" />


        <Button
            android:id="@+id/btn_agree"
            style="@style/MyTextWhite"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/sales_btn_right"
            android:text="同意"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_other"
            style="@style/MyTextWhite"
            android:layout_width="77dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/sales_btn_right"
            android:text="查看详情"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_refuse"
            style="@style/MyTextBlue"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/btn_agree"
            android:background="@drawable/sales_btn_mid"
            android:text="拒绝"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>